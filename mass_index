package com.company;
import javax.swing.text.Style;
import java.util.Scanner;
import static java.lang.Math.*;
public class Main {

    public static void main(String[] args) {
        double m,l;
        double pi = 3.14;

        Scanner inp = new Scanner(System.in);

        System.out.print("Enter the your length as a m   :");

        l= inp.nextDouble();

        System.out.print("Enter the your mass as a kg :");

        m= inp.nextDouble();

        double index = m/(l*l);


        System.out.println("your body mass index = " + index);

    }

}
